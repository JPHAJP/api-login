# Configuración de la base de datos
DATABASE_URL=sqlite:///./api_login.db
# Para PostgreSQL: DATABASE_URL=postgresql://usuario:contraseña@localhost/nombre_db

# Configuración JWT
JWT_SECRET_KEY=super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRES=15
REFRESH_TOKEN_EXPIRES_DAYS=7

# Configuración QR
QR_ACCESS_SECRET=qr-access-secret-key-change-this

# Configuración de archivos (mantener para compatibilidad)
UPLOAD_FOLDER=data/identificaciones
MAX_FILE_SIZE=5242880

# Configuración Google Drive
GOOGLE_DRIVE_ENABLED=true
GOOGLE_CREDENTIALS_PATH=credentials.json
GOOGLE_TOKEN_PATH=token.json
# Para producción, usar service account (recomendado):
GOOGLE_SERVICE_ACCOUNT_PATH=service-account-key.json
# ID de la carpeta específica en Drive (opcional)
GOOGLE_DRIVE_FOLDER_ID=1ABC123def456GHI789jkl